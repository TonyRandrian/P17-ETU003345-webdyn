<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                             http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <display-name>First Servlet</display-name>

    <servlet>
        <servlet-name>dashboard</servlet-name>
        <servlet-class>mg.itu.demoservlet.DashboardServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>dashboard</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>mg.itu.demoservlet.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>create-credit</servlet-name>
        <servlet-class>mg.itu.demoservlet.credit.CreditFromServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>create-credit</servlet-name>
        <url-pattern>/new-credit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>save-credit</servlet-name>
        <servlet-class>mg.itu.demoservlet.credit.CreditServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>save-credit</servlet-name>
        <url-pattern>/save-credit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>create-depense</servlet-name>
        <servlet-class>mg.itu.demoservlet.depense.DepenseFormServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>create-depense</servlet-name>
        <url-pattern>/new-depense</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>save-depense</servlet-name>
        <servlet-class>mg.itu.demoservlet.depense.DepenseServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>save-depense</servlet-name>
        <url-pattern>/save-depense</url-pattern>
    </servlet-mapping>
</web-app>